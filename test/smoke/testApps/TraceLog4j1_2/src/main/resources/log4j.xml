<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="test" class="com.microsoft.applicationinsights.log4j.v1_2.ApplicationInsightsAppender">
        <param name="instrumentationKey" value="00000000-0000-0000-0000-0FEEDDADBEEF" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c - %m%n"/>
        </layout>
    </appender>
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c - %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="info" />
            <param name="levelMax" value="fatal" />
            <param name="AcceptOnMatch" value="true" />
        </filter>
    </appender>

    <logger name="com.microsoft.applicationinsights.core.dependencies.http">
        <level value="off" />
    </logger>
    
    <root>
        <level  value ="TRACE" />
        <appender-ref ref="test" />
        <!-- <appender-ref ref="console" /> -->
    </root>

    <!-- <appender name="aiAppender" class="com.microsoft.applicationinsights.log4j.v1_2.ApplicationInsightsAppender" instrumentationKey="00000000-0000-0000-0000-0FEEDDADBEEF">
    </appender>
    <root>
      <level value ="TRACE" />
      <appender-ref ref="aiAppender" />
    </root> -->
</log4j:configuration>